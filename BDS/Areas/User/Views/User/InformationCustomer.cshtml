
@{
    ViewBag.Title = "InformationCustomer";
    Layout = "~/Areas/User/Views/Shared/_UserAbout.cshtml";
}

@model AFModels.KhachHang
<div class="content">
    <!-- registration -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="main-1">
            <div class="container">
                <div class="register">

                    <form>
                        <a class="acount-btn" href="/User/User/Create">Tạo tài khoản mới</a>
                        <a class="acount-btn" href="/User/User/Login">Đăng nhập</a>

                            <h3>Thông tin đăng ký</h3>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="wow fadeInLeft" data-wow-delay="0.4s">
                                @Html.Label("Họ Tên", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.HoTenKH, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.HoTenKH, "", new { @class = "text-danger" })
                            </div>
                            <div class="wow fadeInRight" data-wow-delay="0.4s">
                                @Html.Label("Tel", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                            </div>
                            <div class="wow fadeInRight" data-wow-delay="0.4s">
                                @Html.Label("Địa chỉ", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.TextAreaFor(model => model.DiaChi, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                            </div>
                            <div class="wow fadeInRight" data-wow-delay="0.4s">
                                @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="clearfix"> </div>
                    </form>
                    <div class="clearfix"> </div>
                    <div class="register-but">
                        <input type="submit" value="Xác nhận" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    }
        <div>
            @Html.ActionLink("<<Quay lại", "Index", null, new { @class = "btn btn-success" })
        </div>
    <!-- registration -->

</div>



