@using PagedList.Mvc;
@model PagedList.IPagedList<AFModels.LienHe>
@{
    ViewBag.Title = "LienHe";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2> Tin nhắn từ khách hàng: </h2>
<div class="x_content">
    <div class="table-responsive">
        <table class="table table-striped jambo_table bulk_action">
            <thead>
                <tr class="headings">
                    <th class="column-title">Mã Liên hệ</th>
                    <th class="column-title">Họ Tên</th>
                    <th class="column-title">Email</th>
                    <th class="column-title">Tiêu đề</th>
                    <th class="column-title">Lời nhắn</th>
                    <th class="column-title"></th>
                    <th class="bulk-actions" colspan="7">
                        <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td> @item.MaLienHe</td>
                    <td> @item.HoTen </td>
                    <td> @item.Email</td>
                    <td> @item.TieuDe </td>
                    <td> @item.LoiNhan </td>
                    <td>
                    <a href="/Admin/LienHe/Reply/@item.MaLienHe" class="btn btn-success">Reply</a>
                    </td>
                </tr>
                }
            </tbody>
            <tr>
                @Html.PagedListPager(Model, pageNumber => Url.Action("LienHe", new { pageNumber }))
            </tr>
        </table>
    </div>
</div>




