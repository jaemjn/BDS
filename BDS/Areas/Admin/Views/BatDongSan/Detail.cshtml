@using AFModels
@using BDS.ViewModel
@model ChiTietBDSViewModel
@{
    ViewBag.Title = "BatDongSan";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2> Chi Tiết Bất Động Sản </h2>
<div class="x_content">
    <div class="table-responsive">
        <table class="table table-striped jambo_table bulk_action">
            <thead>
                <tr class="headings">
                    <th class="column-title">STT</th>
                    <th class="column-title">Mã BĐS</th>
                    <th class="column-title">Giá</th>
                    <th class="column-title">Diện tích</th>
                    <th class="column-title">ĐcBDS</th>
                    <th class="column-title">Mô tả</th>
                    <th class="column-title">Khu vực</th>
                    <th class="column-title">Ảnh</th>
                    <th class="column-title">Phòng ngủ</th>
                    <th class="column-title">Phòng tắm</th>
                    <th class="column-title">Paking</th>
                    <th class="column-title"></th>
                    <th class="column-title"></th>

                    <th class="bulk-actions" colspan="7">
                        <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                    </th>
                </tr>
            </thead>
                <tbody>
                    <tr class="even pointer">
                        <td> @Model.STT </td>
                        <td> @Model.MaBDS </td>
                        <td> @Model.Gia </td>
                        <td> @Model.DienTich </td>
                        <td> @Model.DiaChiBDS </td>
                        <td> @Model.Mota </td>
                        <td> @Model.KhuVuc </td>
                        <td>
                            <div id="Anh">
                                <img src="@Url.Content("/Images/Images/"+@Model.Anh)" width="50" height="50" />
                            </div>
                        </td>
                        <td> @Model.PhongNgu</td>
                        <td> @Model.PhongTam</td>
                        <td> @Model.Paking</td>
                        <td>
                            <a href="/Admin/ChiTietBatDongSan/DeleteDetail/@Model.STT" class="btn btn-success">Xóa</a>
                        </td>
                        <td>
                            <a href="/Admin/ChiTietBatDongSan/EditDetail/@Model.STT" class="btn btn-success">Sửa</a>
                        </td>
                    </tr>
                </tbody>


        </table>
        <div>
            @Html.ActionLink("Quay Lại", "BatDongSan")
        </div>
    </div>
</div>


