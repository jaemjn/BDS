            @Html.ValidationMessageFor(model => model.MaNhom, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Loại BĐS", htmlAttributes: new { @class = "control-label col-md-2" })
