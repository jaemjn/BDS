@using PagedList.Mvc;
@model PagedList.IPagedList<AFModels.NhanVien>
@{
    ViewBag.Title = "NhanVien";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2> Danh sách: </h2>
<div class="x_content">
    <div class="table-responsive">
        <a href="/Admin/NhanVien/Create" class="btn btn-success">Thêm Nhân Viên</a>
        <table class="table table-striped jambo_table bulk_action">
            <thead>
                <tr class="headings">
                    <th class="column-title">Mã NV</th>
                    <th class="column-title">Họ Tên NV</th>
                    <th class="column-title">Chức vụ</th>
                    <th class="column-title">Điện thoại</th>
                    <th class="column-title">Giới tính</th>
                    <th class="column-title">Địa chỉ</th>
                    <th class="column-title">Email</th>
                    <th class="column-title">UserName</th>
                    <th class="column-title">Facebook</th>
                    <th class="column-title">Google+</th>
                    <th class="column-title">Twitter</th>
                    <th class="column-title">Instagram</th>
                    <th class="column-title"></th>
                    <th class="bulk-actions" colspan="7">
                        <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td> @item.MaNV </td>
                    <td> @item.HoTenNV </td>
                    <td> @item.ChucVu </td>
                    <td> @item.DienThoai </td>
                    <td> @item.GioiTinh </td>
                    <td> @item.DiaChi </td>
                    <td> @item.Email </td>
                    <td> @item.UserName </td>
                    <td> @item.Facebook </td>
                    <td> @item.Googleplus </td>
                    <td> @item.Twitter </td>
                    <td> @item.Instagram </td>
                    <td>
                        <a href="/Admin/NhanVien/Edit/@item.MaNV" class="btn btn-success">Sửa</a>
                        <a href="/Admin/NhanVien/Delete/@item.MaNV" class="btn btn-success">Xóa</a>
                    </td>
                </tr>
                }
            </tbody>
            <tr>
                @Html.PagedListPager(Model, pageNumber => Url.Action("NhanVien", new { pageNumber }))
            </tr>
        </table>
    </div>
</div>


