@using PagedList.Mvc;
@model PagedList.IPagedList<AFModels.KhachHang>
@{
    ViewBag.Title = "KhachHang";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2> Danh sách: </h2>
<div class="x_content">
    <div class="table-responsive">
        <table class="table table-striped jambo_table bulk_action">
            <thead>
                <tr class="headings">
                    <th class="column-title">Mã KH</th>
                    <th class="column-title">Họ tên KH</th>
                    <th class="column-title">Điện thoại</th>
                    <th class="column-title">Địa chỉ</th>
                    <th class="column-title">Email</th>
                    <th class="column-title"></th>

                    <th class="bulk-actions" colspan="7">
                        <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                    </th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr class="even pointer">
                        <td> @item.MaKH </td>
                        <td> @item.HoTenKH </td>
                        <td> @item.DienThoai </td>
                        <td> @item.DiaChi </td>
                        <td> @item.Email </td>
                        <td>
                            <a href="/Admin/KhachHang/Edit/@item.MaKH" class="btn btn-success">Sửa</a>
                            <a href="/Admin/KhachHang/Delete/@item.MaKH" class="btn btn-success">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tr>
                @Html.PagedListPager(Model, pageNumber => Url.Action("BatDongSan", new { pageNumber }))
            </tr>
        </table>
    </div>
</div>




